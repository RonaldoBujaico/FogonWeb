@model IEnumerable<FogonParillero.Models.CategoriaProducto>

@{
    ViewData["Title"] = "Categoria Producto";
    bool modalAbierto = ViewData["ModalAbierto"] as bool? ?? false;
}

<style>
    .selected-icon {
        border: 3.2px solid #555555;
        border-radius: 6px;
        background-color: rgba(45, 55, 72, 0.3);
        margin: -100px;
    }
</style>

<div class="flex h-screen">
    @Html.Partial("_MenuLateral")

    <div class="flex-1 flex flex-col">
        <div class="bg-transparent-800 text-black p-4 flex justify-between items-center">
            <div class="flex">
                <a href="/producto" class="text-xl mr-12 ml-6 font-bold text-gray-700 opacity-60">Productos</a>
                <a href="/categoriaproducto" class="text-xl mr-12 font-bold text-gray-700">Categorías</a>
            </div>
            <a href="/categoriaproducto/registrar" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-full">Nueva Categoria</a>
        </div>

        <div class="bg-gray-300 h-px w-full"></div>

        @if (modalAbierto)
        {
            <div id="modalNuevaCategoria" class="fixed z-10 inset-0 overflow-y-auto bg-gray-700 bg-opacity-75 flex justify-center items-center">
                <div class="relative max-w-full max-h-full bg-white rounded-lg p-5 shadow-lg">
                    <div class="flex items-center justify-between p-4 md:p-5 rounded-t">
                        <h2 class="text-3xl font-bold text-gray-454545 mr-4">Nueva Categoría de Producto</h2>
                        <form method="post" action="/CategoriaProducto/CerrarModal">
                            <button type="submit" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto mt-2 inline-flex justify-center items-center">
                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                </svg>
                                <span class="sr-only">Cerrar Modal</span>
                            </button>
                        </form>
                    </div>

                    <form class="p-4 md:p-5" asp-action="GuardarNuevaCategoria" method="post">
                        <div class="mt-5 flex items-center">
                            <label for="nombreCategoria" class="block text-gray-454545 font-medium mr-8 mb-2">Nombre <span class="text-red-500">*</span></label>
                            <input type="text" name="nombreCategoria" class="bg-gray-200 text-gray-454545 rounded-lg w-3/6 p-2.5 ml-10">
                        </div>
                        <div class="mt-5">
                            <label for="iconoCategoria" class="block text-gray-454545 font-medium mb-2">Elige un icono <span class="text-red-500">*</span></label>
                            <div class="mt-8 ml-12 mr-12 grid grid-cols-4 gap-3">
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food1.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food1.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food2.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food2.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food3.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food3.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food4.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food4.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food5.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food5.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food6.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food6.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food7.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food7.png"></label>
                                </div>
                                <div class="w-10 h-10 bg-gray-200 rounded-lg flex items-center justify-center">
                                    <label><img src="~/iconos/food8.png" class="w-8 h-8 text-gray-600 select-icon" data-icono="food8.png"></label>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="iconoSeleccionado" name="iconoCategoria">
                        <div class="flex justify mt-10">
                            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-full">Registrar Categoria</button>
                        </div>

                    </form>

                </div>
            </div>
        }

        <main class="p-10 flex-1">
            <div class="p-10 flex justify-center items-center">
                <table class="border-collapse border-gray-300 text-gray-454545">
                    <thead>
                        <tr class="text-center font-semibold">
                            <th class="py-2 border-b-2 border-gray-300 px-12">Orden</th>
                            <th class="py-2 border-b-2 border-gray-300 px-12">Nombre</th>
                            <th class="py-2 border-b-2 border-gray-300 px-12"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var categoria in Model.Select((value, index) => new { Value = value, Index = index + 1 }))
                        {
                            <tr class="text-center font-semibold text-gray-454545 opacity-80 transition-colors hover:bg-gray-100 hover:text-gray-700">
                                <td class="py-2 px-4">@categoria.Index</td>
                                <td class="py-2 px-4">@categoria.Value.Nombre</td>
                                <td class="py-2 px-4"><img src="~/iconos/menu.png" class="w-4 h-4 opacity-70 hover:opacity-100"></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<script>
    const iconos = document.querySelectorAll('.select-icon');
    const inputIcono = document.getElementById('iconoSeleccionado');

    iconos.forEach(icono => {
        icono.addEventListener('click', () => {
            iconos.forEach(i => {
                i.parentElement.classList.remove('selected-icon');
            });
            icono.parentElement.classList.add('selected-icon');
            const iconoSeleccionado = icono.dataset.icono;
            inputIcono.value = iconoSeleccionado;
        });
    });
</script>